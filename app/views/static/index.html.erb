<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-8">
      <%= image_tag "illustrations/Users-Network.png", class: "mx-auto mb-8 max-w-lg" %>
      <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
        Empowering Local Connections<br />in the Digital Sphere
      </h1>
      <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 lg:px-48 dark:text-gray-400">
        Seamlessly connect through personalized links page, link shortener, and QR codes.
      </p>
      <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
        <%= link_to new_user_registration_path, class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-blue-700 rounded-lg border border-blue-700 hover:bg-blue-700 hover:text-white focus:ring-4 focus:ring-blue-300 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" do %>
          <i class="fas fa-id-badge mr-2"></i>Create your link page
        <% end %>
        <%= link_to new_short_link_path, class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-yellow-700 rounded-lg border border-yellow-700 hover:bg-yellow-700 hover:text-white focus:ring-4 focus:ring-yellow-300 dark:border-yellow-500 dark:text-yellow-500 dark:hover:text-white dark:hover:bg-yellow-500 dark:focus:ring-yellow-800" do %>
          <i class="fas fa-paperclip mr-2"></i>Create a short link
        <% end %>
        <%= link_to new_qr_code_path, class: "inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-green-700 rounded-lg border border-green-700 hover:bg-green-700 hover:text-white focus:ring-4 focus:ring-green-300 dark:border-green-500 dark:text-green-500 dark:hover:text-white dark:hover:bg-green-500 dark:focus:ring-green-800" do %>
          <i class="fas fa-qrcode mr-2"></i>Create a QR code
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Use Cases Section - Desktop -->
<section class="hidden md:block bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
    <div class="grid md:grid-cols-3 gap-8">
      <div data-bs-target="#useCaseCarousel" data-bs-slide-to="0" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300" aria-current="true" aria-label="Use case 1">
        <div class="p-5">
          <%= image_tag "use_cases/Advertising-5.png", class: "rounded-lg mb-4" %>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">For You</h5>
          <p class="font-normal text-gray-700 dark:text-gray-400">Create and personalize your very own links page.</p>
        </div>
      </div>

      <div data-bs-target="#useCaseCarousel" data-bs-slide-to="1" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300" aria-label="Use case 2">
        <div class="p-5">
          <%= image_tag "use_cases/Diverse-Team-1.png", class: "rounded-lg mb-4" %>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">For Network</h5>
          <p class="font-normal text-gray-700 dark:text-gray-400">One stop center for all your fan's needs.</p>
        </div>
      </div>

      <div data-bs-target="#useCaseCarousel" data-bs-slide-to="2" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300" aria-label="Use case 3">
        <div class="p-5">
          <%= image_tag "use_cases/STARTUP-2.png", class: "rounded-lg mb-4" %>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">For Work</h5>
          <p class="font-normal text-gray-700 dark:text-gray-400">Take advantage of our tools to optimize your workflow.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Use Cases Section - Mobile -->
<div class="md:hidden bg-white dark:bg-gray-900">
  <div id="useCaseCarousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
      <!-- Item 1 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
        <div class="absolute block w-full h-full">
          <%= image_tag "use_cases/Advertising-5.png", class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <div class="absolute bottom-0 left-0 right-0 px-4 py-2 bg-black/50">
            <h5 class="text-xl text-white">For You</h5>
            <p class="text-sm text-gray-200">Create and personalize your very own links page.</p>
          </div>
        </div>
      </div>
      <!-- Item 2 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <div class="absolute block w-full h-full">
          <%= image_tag "use_cases/Diverse-Team-1.png", class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <div class="absolute bottom-0 left-0 right-0 px-4 py-2 bg-black/50">
            <h5 class="text-xl text-white">For Network</h5>
            <p class="text-sm text-gray-200">One stop center for all your fan's needs.</p>
          </div>
        </div>
      </div>
      <!-- Item 3 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <div class="absolute block w-full h-full">
          <%= image_tag "use_cases/STARTUP-2.png", class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <div class="absolute bottom-0 left-0 right-0 px-4 py-2 bg-black/50">
            <h5 class="text-xl text-white">For Work</h5>
            <p class="text-sm text-gray-200">Take advantage of our tools to optimize your workflow.</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Slider controls -->
    <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
    <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>
  </div>
</div>

<div class="container py-3">
  <div class="px-3 py-5 pb-md-4 mx-auto">
    <h1 class="display-4 fw-normal text-body-emphasis text-center">Answers to Common Queries</h1>
    <p class="fs-5 text-body-secondary lead text-center">Got questions? We've got answers! Dive into our FAQ section below for quick solutions and friendly guidance.</p>
  </div>
</div>
