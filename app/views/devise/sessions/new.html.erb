<div class="container d-flex flex-column justify-content-center mt-5">
  <%= image_tag "ranting-logo.png", class: "mx-auto d-block", height: "64" %>
  <%= image_tag "3500703.png", class: "my-3 img-fluid col-10 col-md-8 col-lg-4 mx-auto", height: "128" %>
  <div class="card text-bg-light my-3 mx-auto col-10 col-md-8 col-lg-4">
    <div class="card-header">Log in</div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-grid">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-body-secondary">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
