<%- if controller_name != 'sessions' %>
  <p class="mb-4">
    Already have an account?<br />
    <%= link_to "Log in here", new_session_path(resource_name), class: "text-blue-700 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-600" %>
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb-4">
    Don't have an account yet?<br />
    <%= link_to "Create your Gugel account here", new_registration_path(resource_name), class: "text-blue-700 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-600" %>
  </p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb-4">
    Forgot your password?<br />
    <%= link_to "Click here to reset your password", new_password_path(resource_name), class: "text-blue-700 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-600" %>
  </p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="mb-4">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-700 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-600" %>
  </p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="mb-4">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-700 hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-600" %>
  </p>
<% end %>
