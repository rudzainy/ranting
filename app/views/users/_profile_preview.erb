<div class="container my-5 text-center">
  <div class="row g-5">
    <div class="col-lg-6 mx-auto">
      <%= image_tag user.avatar, class: "d-block mx-auto my-3 col-3 rounded-circle" if user.avatar.attached? %>
      <h3><%= user.full_name.nil? ? user.email : user.full_name %></h3>
      <p class="lead mb-5">
        <%= user.description %>
      </p>
    </div>
    <div class="col-12">
      <h5>Social Links</h5>
      <div class="grid gap-2 mb-3">
        <% @social_links.each do |link| %>
          <%= link_to link.url, target: "_blank", class: "text-decoration-none" do %>
            <%= render "social_link_button", link: link %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-12">
      <h5>Category</h5>
      <% @free_links.each do |link| %>
        <div class="d-grid gap-2 mb-3">
          <%= render "link_button", link: link %>
        </div>
      <% end %>
    </div>
  </div>
</div>