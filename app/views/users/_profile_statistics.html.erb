<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card d-none">
        <div class="card-header">
          <i class="fas fa-chart-column me-2"></i>Your Page Statistics
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <span class="me-2">Unique Visitors</span>
            <span class=""><strong><%= @current_user.impressionist_count(filter: :ip_address) %></strong></span>
          </li>
          <li class="list-group-item">
            <span class="me-2">Page Views</span>
            <span class=""><strong><%= @current_user.impressionist_count %></strong></span>
          </li>
          <% if !@current_user.username.nil? %>
            <li class="list-group-item">
              <button onclick="copyProfileLinkTop()" class="btn btn-outline-secondary h-100" id="copyProfileLinkButtonTop">
                <i class="bi bi-clipboard-plus me-2"></i>Copy your profile link
              </button>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="card mb-3">
        <div class="card-header d-md-none">
          <i class="fas fa-chart-column me-2"></i>Your Page Statistics
        </div>
        <div class="py-2 px-3 d-flex justify-content-between align-items-center">
          <div class="d-none d-md-block">
            <i class="fas fa-chart-column"></i><span class="ms-2"><strong>Your Page Statistics</strong></span>
          </div>
          <div class="d-flex flex-row py-2 align-items-center">
            <span class="me-2">
              <i class="fas fa-person-walking"></i><span class="ms-2 d-none d-md-inline">Unique Visitors</span>
            </span>
            <span class=""><strong><%= @current_user.impressionist_count(filter: :ip_address) %></strong></span>
          </div>
          <div class="d-flex flex-row flex-grow py-2 align-items-center">              
            <span class="me-2">
              <i class="fas fa-eye"></i><span class="ms-2 d-none d-md-inline">Page Views</span>
            </span>
            <span class=""><strong><%= @current_user.impressionist_count %></strong></span>
          </div>
          <% if !@current_user.username.nil? %>
            <button onclick="copyProfileLinkTop()" class="btn btn-outline-secondary h-100" id="copyProfileLinkButtonTop">
              <i class="bi bi-clipboard-plus me-2"></i>Copy your profile link
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Copy user profile link into clipboard.
  function copyProfileLinkTop() {
    const app_url = "<%= request.base_url %>";
    const username = "<%= @current_user.username %>";
    navigator.clipboard.writeText(app_url + "/" + username);
    document.getElementById("copyProfileLinkButtonTop").innerHTML = "<i class='fas fa-thumbs-up me-2'></i>Copied to your clipboard!"
  }
</script>
