<div class="container my-5 pb-5 text-center">
  <div class="row g-5">
    <div class="col-12 col-lg-12 mx-auto">
      <%= image_tag user.avatar, class: "d-block mx-auto my-3 col-3 col-md-4 col-lg-1 rounded-circle" if user.avatar.attached? %>
      <h3><%= user.full_name.nil? ? user.email : user.full_name %></h3>
      <p class="lead mb-5">
        <%= user.description %>
      </p>
    </div>
    <div class="col-lg-6">
      <h5>Social Links</h5>
      <% @social_links.each do |link| %>
        <div class="d-grid gap-2 mb-3">
          <%= link_to link_path(link), target: "_blank", class: "text-decoration-none" do %>
            <%= render "link_button", link: link %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-6">
      <h5>Category</h5>
      <% @free_links.each do |link| %>
        <div class="d-grid gap-2 mb-3">
          <%= link_to link_path(link), target: "_blank", class: "text-decoration-none" do %>
            <div class="btn-group w-100 d-flex" role="group">
              <div class="btn btn-lg btn-primary flex-shrink-1 col-2 text-center"><i class="fa-<%= link.icon_style %> fa-<%= link.icon %> mr-2"></i></div>
              <div class="btn btn-lg btn-outline-primary bg-white w-100 text-start"><%= link.title %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>