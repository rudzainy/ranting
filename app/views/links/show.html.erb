<div class="container mt-5 text-center">
  <div class="row g-3">
    <div class="col-md-6 mx-auto">
      <%= image_tag @user.avatar, class: "d-block mx-auto my-3 col-3 col-md-4 col-lg-2 rounded-circle" if @user.avatar.attached? %>
      <h3><%= @user.full_name.nil? ? @user.email : @user.full_name %></h3>
      <p class="lead">
        <%= @user.description %>
      </p>
    </div>
    <div class="col-md-6">

      <div class="row g-3">
        <% @links.each do |link| %>
          <div class="col-6">
            <div class="d-flex">
              <%= link_to link.url, target: "_blank", class:"btn btn-lg btn-outline-primary flex-fill link-button" do %>
                <i class="bi bi-house-door-fill"></i>
                <h4 class="me-auto"><%= link.title %></h4>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>