<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow dark:bg-gray-800">
    <!-- Header -->
    <div class="flex items-center justify-between p-5 border-b rounded-t dark:border-gray-700">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
        Edit Your Link
      </h2>
      <%= link_to :back, class: "text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" do %>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Close modal</span>
      <% end %>
    </div>
    
    <!-- Form -->
    <div class="p-6">
      <%= turbo_frame_tag "modal" do %>
        <%= render "form" %>
      <% end %>
    </div>
  </div>
</div>