<%# This is the individual link card %>
<%= turbo_frame_tag "edit_link_mobile_#{link.id}" do %>
  <% unless link.empty? %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <i class="fa-<%= link.icon_style %> fa-<%= link.icon %> mr-3 mt-3 <%= "color--#{link.icon}" if link.social? %>"></i> 
      <div class="ms-3 flex-fill overflow-hidden">
        <small><%= link.title %></small><br>
        <%= sanitize_link(link.url) %>
      </div>
      <div class="ms-3 mt-2"><i class="fas fa-hand-pointer me-2 text-secondary"></i><%= link.impressionist_count %></div>
      <%= link_to edit_link_path(link), 
                  class: "btn btn-outline-primary btn-sm ms-3 mt-2", 
                  id: "update-link-#{link.id}", 
                  remote: true,
                  data: { turbo_frame: "modal" } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
    </li>
  <% else %>
    <li class="list-group-item d-flex justify-content-end">
      <%= link_to edit_link_path(link), 
                  class: "btn btn-outline-primary btn-sm", 
                  id: "update-link-#{link.id}", 
                  remote: true,
                  data: { turbo_frame: "modal" } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
    </li>
  <% end %>
<% end %>