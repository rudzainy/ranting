<%# This is the individual link card %>
<% unless link.empty? %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <i class="fa-<%= link.icon_style %> fa-<%= link.icon %> mr-3 <%= "color--#{link.icon}" if link.social? %>"></i> 
    <div class="ms-3 flex-fill"><%= link.title %></div>
    <div class="ms-3"><%= link.impressionist_count %> clicks</div>
    <%= link_to edit_link_path(link), 
                class: "btn btn-outline-primary btn-sm ms-3", 
                id: "update-link-#{link.id}", 
                data: { turbo_frame: "modal" } do %>
      <i class="bi bi-pencil-fill"></i>
    <% end %>
  </li>
<% else %>
  <li class="list-group-item d-flex justify-content-end">
    <%= link_to edit_link_path(link), 
                class: "btn btn-outline-primary btn-sm", 
                id: "update-link-#{link.id}", 
                data: { turbo_frame: "modal" } do %>
      <i class="bi bi-pencil-fill"></i>
    <% end %>
  </li>
<% end %>
 