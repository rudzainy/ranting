<%= simple_form_for(@link) do |f| %>
  <div class="row mb-3">
    <label for="icon" class="col-sm-3 col-form-label">Link icon</label>
    <div class="col-sm-9">

      <div class="input-group mb-3">
        <label class="input-group-text" for="icon" id="selected-icon">
          <i class="fa-<%= @link.icon_style %> fa-<%= @link.icon %> mr-2"></i>
        </label>
        <%= f.select :icon, icons_list, {}, {class: "form-select", id: "icon"} do %>
          <%= icons_list.each do |i| %>
            <% if i == @link.icon %>
              <option selected value="<%= i %>">
                <%= i %>
              </option>
            <% else %>
              <option value="<%= i %>">
                <%= i %>
              </option>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <label for="title" class="col-sm-3 col-form-label">Link title</label>
    <div class="col-sm-9">
      <%= f.input :title, placeholder: "Name your link", label: false, class:"form-control high-z", html: {id: "title"} %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="url" class="col-sm-3 col-form-label">Link URL</label>
    <div class="col-sm-9">
      <div class="input-group flex-nowrap">
        <span class="input-group-text h-50">https://</span>
        <%= f.input :url, placeholder: sanitize_link(@link.url), input_html: { value: sanitize_link(@link.url)}, label: false, class:"form-control rounded-start-0 high-z" %>
      </div>
    </div>
  </div>
  <%= f.submit "Update Link", class:"btn btn-primary me-auto shadow" %>
<% end %>
