<div class="container mx-auto max-w-md py-8">
  <h2 class="text-xl font-semibold mb-4">Edit Profile</h2>

  <%= form_with model: @profile, url: profile_path(@user), local: true, html: { multipart: true } do |f| %>
    <div class="mb-4">
      <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :avatar, class: "mt-1 block w-full" %>
      <% if @profile.avatar.attached? %>
        <%= image_tag @profile.avatar.variant(resize_to_fill: [100,100]), class: "mt-2 rounded-full" %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :bio, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :bio, maxlength: 234, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
    </div>

    <div class="flex space-x-4">
      <%= f.submit 'Save', class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= link_to 'Cancel', profile_path(@user), class: "px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
