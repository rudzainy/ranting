<div class="row">
  <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-4">
    <div class="card mb-4">
      <div class="card-header d-flex flex-row align-items-center justify-content-between">
        <h2 class="card-title">Create Short Link</h2>
        <%= link_to :back do %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" data-bs-target="#my-alert" aria-label="Close"></button>
        <% end %>
      </div>
      <div class="card-body">
        <%= simple_form_for @short_links do |f| %>
          <div class="row mb-3">
            <label for="title" class="col-sm-3 col-form-label">Paste your long URL here</label>
            <div class="col-sm-9">
              <%= text_field_tag :url, nil, label: false, class:"form-control rounded-start-0 high-z" %>
            </div>
          </div>
          <%= f.submit "Shorten Link", class:"btn btn-primary me-auto shadow" %>
          <div class="row d-none">
            <label for="url" class="col-sm-3 col-form-label">Here's your short URL</label>
            <div class="col-sm-9">
              <div class="input-group flex-nowrap">
                <span class="input-group-text h-50">https://gugel.my/</span>
                <%= text_field_tag :url, "ABCDE", label: false, disabled: true, class:"form-control rounded-start-0 high-z" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>
